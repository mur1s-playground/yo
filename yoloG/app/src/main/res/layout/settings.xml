<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_inc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewLabelServerIPPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server IP:Port" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="192.168.178.24" />

        <TextView
            android:id="@+id/textViewIPPortSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":" />

        <EditText
            android:id="@+id/editTextNumberPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text="8000" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLabelChatUpdateIntervalSeconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat update interval (in seconds)" />

    <EditText
        android:id="@+id/editTextNumberChatUpdateInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="5" />

    <TextView
        android:id="@+id/textViewLabelChatChunkTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Chat Chunk Timestamp" />

    <EditText
        android:id="@+id/editTextNumberChatChunkTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <TextView
        android:id="@+id/textViewLabelBacklogSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat Displayed Messages Count" />

    <EditText
        android:id="@+id/editTextNumberDisplayedMessagesCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="500"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewLabelFeedBacklogSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Feed Displayed Messages Count" />

    <EditText
        android:id="@+id/editTextNumberFeedDisplayedMessagesCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/ic_menu_save" />
    </LinearLayout>


</LinearLayout>